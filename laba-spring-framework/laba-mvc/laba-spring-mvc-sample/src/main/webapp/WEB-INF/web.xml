<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>labaDispatcherServlet</servlet-name>
        <servlet-class>com.github.laba.mvc.servlet.LabaDispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextLocation</param-name>
            <param-value>classpath*:/mvc.properties</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>labaDispatcherServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
